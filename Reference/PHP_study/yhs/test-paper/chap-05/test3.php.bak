<?php

echo "<B> ※ 반환(return) 값과 인자 세 개를 갖는 함수</B> <br>";
echo "-------------------------------------------- <br>";

function hap($a, $b, $c)      // hap(인자1, 인자2, 인자3)함수 정의
{
	echo " 덧셈 연산을 하는  hap(\$a, \$b, \$c)함수 호출 <br>";
	echo " ▶ 연산결과 : {$a} + {$b} + {$c} = ";
	return $a + $b + $c;
}

function cha($a, $b, $c)      // cha(인자1, 인자2, 인자3)함수 정의
{
	echo " 뺄셈 연산을 하는  cha(\$a, \$b, \$c)함수 호출 <br>";
	echo " ▶ 연산결과 :  {$a} - {$b} - {$c} = ";
	return $a - $b - $c;
}

function gob($a, $b, $c)      // gob(인자1, 인자2, 인자3)함수 정의
{
	echo " 곱셈 연산을 하는  gob(\$a, \$b, \$c)함수 호출 <br>";
	echo " ▶ 연산결과 :  {$a} * {$b} * {$c} = ";
	return $a * $b * $c;
}

function nanu($a, $b, $c)      // nanu(인자1, 인자2, 인자3)함수 정의
{
	echo " 나눗셈 연산을 하는  nanu(\$a, \$b, \$c)함수 호출 <br>";
	echo " ▶ 연산결과 :  {$a} ÷ {$b} ÷ {$c} = ";
	return $a / $b / $c;
}

	$res1 = hap(8, 6, 5);
	echo " ( {$res1} )<br>";
	echo "-------------------------------------------- <br>";

	$res2 = cha(100, 10, 5);
	echo " ( {$res2} )<br>";
	echo "-------------------------------------------- <br>";

	$res3 = gob(8, 8, 8);
	echo " ( {$res3} )<br>";
	echo "-------------------------------------------- <br>";

	$res4 = nanu(80, 5, 3);
	echo " ( {$res4} )<br>";
	echo "-------------------------------------------- <br>";

?>